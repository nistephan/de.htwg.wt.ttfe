# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for ttfe
GET     /                           controllers.TTFEController.ttfe
GET     /ttfePolymer              controllers.TTFEController.ttfePolymer
GET     /left                       controllers.TTFEController.left
GET     /right                      controllers.TTFEController.right
GET     /up                         controllers.TTFEController.up
GET     /down                       controllers.TTFEController.down
GET     /new                        controllers.TTFEController.restart
GET     /about                      controllers.TTFEController.about
GET     /json                       controllers.TTFEController.gridToJson
GET     /move/:direction            controllers.TTFEController.move(direction:String)

GET     /websocket                  controllers.TTFEController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
